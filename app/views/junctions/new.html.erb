<h1>New Junction</h1>

<%= form_for :junction, url: junctions_path do |f| %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %><br />
    <%= if @junction; @junction.errors.full_messages end %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to "Back to junctions", junctions_path %>
