<h1>Editing traffic light</h1>

<%= form_for :traffic_light, url: traffic_light_path(@traffic_light), method: :patch do |f| %>
  <p>
    <%= f.label :junction %><br />
    <%= f.select :junction_id, options_for_select(Junction.all.map { |j| [j.name, j.id] }, @traffic_light.junction_id) %>
  </p>
  <p>
    <%= f.label :colour %><br />
    <%= f.select :colour, options_for_select(["Red", "Yellow", "Green"], @traffic_light.colour) %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back", traffic_lights_path %>