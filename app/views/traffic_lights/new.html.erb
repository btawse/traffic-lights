<h1>Traffic Light</h1>

<%= form_for :traffic_light, url: traffic_lights_path do |f| %>
  <p>
    <%= f.hidden_field :junction_id, :value => params[:junction_id] %>
  </p>
  <p>
    <%= f.label :colour %><br />
    <%= f.select :colour, options_for_select(["Red", "Yellow", "Green"]) %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back", traffic_lights_path %>